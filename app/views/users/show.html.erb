<h1>Welcome, <%= current_user.username %>!</h1>

<h1>Favorite Gifs</h1>
<% @categories.each do |category| %>
  <h2><%= category.name %></h2>
  <% category.user_favorites(current_user).each do |favorite| %>
    <img src=<%= favorite.gif.image_path %>>
    <%= button_to favorite_path(favorite), method: 'delete' do %>
      <i class='glyphicon glyphicon-heart'></i>
    <% end %>
  <% end %>
<% end %>

<%= link_to 'Log Out', logout_path, method: :delete %>
