<figure class="gif">
  <img src=<%= gif.image_path %> alt=<%= gif.category %>>
  <div class="btn-group">
    <%= button_to gif_path(gif), method: 'put' do %>
        <i class='glyphicon glyphicon-heart'></i>
    <% end %>
    <%= form_tag favorites_path do %>
      <%= hidden_field_tag :gif_id, gif.id %>
      <button  type='submit'>
        <i class="glyphicon glyphicon-heart-empty"></i>
      </button>
    <% end %>
  </div>
</figure>
