<figure class="gif">
  <img src=<%= gif.image_path %> alt=<%= gif.category %>>
  <div class="btn-group">
    <% if @favorites.include?(gif) %>
      <button>
        <%= link_to gif_path(gif), method: 'put', class: 'unfavorite' do %>
          <i class='glyphicon glyphicon-heart'></i>
        <% end %>
      </button>
    <% else %>
      <%= form_tag favorites_path do %>
        <%= hidden_field_tag :gif_id, gif.id %>
        <button><a type="submit" class="favorite">
          <i class="glyphicon glyphicon-heart-empty"></i>
        </a></button>
      <% end %>
    <% end %>
  </div>
</figure>
